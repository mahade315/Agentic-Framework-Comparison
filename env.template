# TASK_SHUFFLE_SEED=42                       # Random seed for shuffling

# CrewAI Configuration (Optional)
USE_CREWAI=false                             # Set to 'true' to use CrewAI agents instead of direct API
CREWAI_VERBOSE=false                         # Show detailed agent reasoning
CREWAI_ALLOW_DELEGATION=false                # Allow agents to delegate tasks


